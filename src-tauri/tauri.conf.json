{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "inventory-tauri",
  "version": "0.1.0",
  "identifier": "com.inventory-tauri.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "inventory-tauri",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "scope": ["shell:allow-open"]
    },
    "fs": {
      "scope": {
        "allow": ["**"],
        "deny": []
      }
    },
    "dialog": {
      "all": true
    }
  }
}
